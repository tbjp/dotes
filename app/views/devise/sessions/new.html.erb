<div class="glassmorph window p-4 text-center">
  <h2>Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "rounded-pill" } %>
      <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "rounded-pill" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "rounded-pill btn btn-light" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
