<div class="glassmorph window p-4 text-center overflow-y h-100 d-flex flex-column justify-content-between" data-controller="topic-selector">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first name", class: "rounded-pill" }%>
      <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last name", class: "rounded-pill" }%>
      <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: "rounded-pill" }%>
      <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: "rounded-pill" } %>
      <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password", class: "rounded-pill" } %>
      <%= f.input :native_language, label: "Your native language",
                collection: Podcast::LANGUAGES,
                as: :radio_buttons,
                input_html: { class: "tag-selector rounded-pill" },
                item_wrapper_class: 'tag-item' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
