<div class="navbar navbar-expand-sm navbar-light navbar-lewagon w-100">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <button class="btn menu-btn glassmorph">
        <i class="fa-solid fa-house"></i>
      </button>
    <% end %>
    <div class="dropup-center dropup menu">
      <button class="btn menu-btn dropdown-toggle glassmorph" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fas fa-bars"></i>
      </button>
      <ul class="dropdown-menu glassmorph">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to settings_path, class: "nav-link" do %>
              <i class="fa-solid fa-gear"></i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" do %>
              <i class="fa-solid fa-right-from-bracket"></i>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link" do %>
              <i class="fa-solid fa-right-to-bracket"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
